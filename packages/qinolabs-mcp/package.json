{
  "name": "qinolabs-mcp",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "bin": {
    "qinolabs-mcp": "./dist/server/index.js"
  },
  "scripts": {
    "dev": "concurrently -n server,ui -c blue,green \"tsx watch src/server/index.ts --no-browser\" \"vite dev --open\"",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:ui": "vite dev",
    "build": "tsup src/server/index.ts --format esm --out-dir dist/server --clean && vite build",
    "start": "node dist/server/index.js",
    "check": "tsc --noEmit --pretty false",
    "test": "vitest"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@qinolabs/ui-core": "^0.1.0",
    "@tanstack/react-query": "^5.90.16",
    "@tanstack/react-router": "^1.144.0",
    "@xyflow/react": "12.10.0",
    "class-variance-authority": "^0.7.1",
    "hono": "^4.7.6",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@qinolabs/tsconfig": "workspace:*",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^22.19.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "babel-plugin-react-compiler": "19.1.0-rc.3",
    "concurrently": "^9.1.2",
    "tailwindcss": "^4.1.18",
    "tsup": "^8.4.0",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
